/**index.wxss**/
page{
  color: #333;
  width: 100%;
  height: 100%;
}
.bg{
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  overflow-y: scroll;
}
.box{
  width: 690rpx;
  padding-top: 30rpx;
  margin: 0 30rpx 30rpx 30rpx;
}
.flex-row{
  display: flex;
  align-items: center;
}
.mg_lt_30{
  margin-left: 30rpx;
}
.date{
  color: #fff;
  font-weight: bold;
}
.icon-pic{
  width: 80rpx;
  height: 80rpx;
}
.short-line{
  border-left: 4rpx solid #379cff;
  height: 50rpx;
  margin-left: 32rpx;
}
.left{
  height: 240rpx;
}
.point{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.v-line{
  border-left: 4rpx solid #379cff;
  height: 100rpx;
  margin-left: 38rpx;
}
.right{
  width: 540rpx;
  margin-left: 30rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 2px 2px 6px #666;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid #ccc;
  border-radius:10rpx;
}
.pic{
  height: 150rpx;
}
.text{
  font-size: 28rpx;
  width:360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.time{
  font-size: 24rpx;
  color: #999;
}

.add{
  position: fixed;
  bottom: 100rpx;
  right: 80rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 2rpx 4rpx 8rpx #666;
}
.icon-add{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 25rpx;
  left: 25rpx;
}
.btn-up{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -100rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background-color: transparent;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
  color: #fff;
  text-align: center;
  font-weight: 400;
  font-size: 28rpx;
}